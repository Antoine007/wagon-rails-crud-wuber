<h1>Drivers</h1>

<p><%= link_to("New driver", new_driver_path) %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>License plate</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to(driver.name, driver_path(driver)) %></td>
        <td><%= driver.license_plate %></td>
        <td><%= driver.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
